<core:View controllerName="com.sunshine.controller.Login"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title"
		  id="login">
		<content>
			<Panel>
				<content>
					<f:SimpleForm minWidth="1024" editable="false"
						layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3"
						emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1">
						<f:content>
							<Label text="Name" labelFor="name" />
							<Input id="name"  placeholder="Enter name ..." />
							<Label text="Password" labelFor="passwordInput" />
							<Input id="passwordInput" type="Password" placeholder="Enter password ..." />
						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>

		</content>
	</Page>
</core:View>